<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/game_board_background">

    <ImageView
        android:id="@+id/tree_game_one"
        android:layout_width="197dp"
        android:layout_height="175dp"
        android:layout_marginStart="132dp"
        android:background="@drawable/game_board_wood_log"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.675" />

    <ImageView
        android:id="@+id/tree_game_two"
        android:layout_width="203dp"
        android:layout_height="173dp"
        android:layout_marginStart="72dp"
        android:background="@drawable/game_board_wood_log"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toEndOf="@+id/tree_game_one"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.675" />

    <ImageButton
        android:id="@+id/btn_play_game"
        android:layout_width="63dp"
        android:layout_height="60dp"
        android:layout_marginStart="250dp"
        android:background="@drawable/btn_play_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8" />

    <ImageButton
        android:id="@+id/btn_play_game_two"
        android:layout_width="63dp"
        android:layout_height="60dp"
        android:layout_marginEnd="120dp"
        android:background="@drawable/btn_play_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.72"
        app:layout_constraintStart_toEndOf="@+id/btn_play_game"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8" />

    <ImageView
        android:id="@+id/wooden_sign_score"
        android:layout_width="131dp"
        android:layout_height="108dp"
        android:layout_marginBottom="284dp"
        android:background="@drawable/game_board_wooden_sign"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.23"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/wooden_sign_score_two"
        android:layout_width="131dp"
        android:layout_height="108dp"
        android:layout_marginBottom="284dp"
        android:background="@drawable/game_board_wooden_sign"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.67"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/combi_icon"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:onClick="clicking"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.024"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.951" />

    <TextView
        android:id="@+id/score_game_one"
        android:layout_width="104dp"
        android:layout_height="46dp"
        android:layout_marginStart="187dp"
        android:text="00:00"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/tree_game_one"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/wooden_sign_score"
        app:layout_constraintVertical_bias="0.57" />

    <FrameLayout
        android:id="@+id/game_one"
        android:layout_width="74dp"
        android:layout_height="66dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/game_two"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wooden_sign_score"
        app:layout_constraintVertical_bias="0.325" />

    <FrameLayout
        android:id="@+id/game_two"
        android:layout_width="74dp"
        android:layout_height="66dp"
        android:layout_marginEnd="164dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.634"
        app:layout_constraintStart_toEndOf="@+id/tree_game_one"
        app:layout_constraintTop_toBottomOf="@+id/wooden_sign_score_two"
        app:layout_constraintVertical_bias="0.325" />

    <TextView
        android:id="@+id/score_game_two"
        android:layout_width="104dp"
        android:layout_height="46dp"
        android:layout_marginTop="53dp"
        android:layout_marginStart="10dp"
        android:text="00:00"
        android:textColor="@color/black"
        android:textDirection="anyRtl"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.46"
        app:layout_constraintStart_toEndOf="@+id/score_game_one"
        app:layout_constraintTop_toTopOf="@+id/wooden_sign_score_two" />

    <TextView
        android:id="@+id/player_name"
        android:layout_width="107dp"
        android:layout_height="60dp"
        android:layout_marginEnd="16dp"
        android:text=""
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.053" />

    <ImageButton
        android:id="@+id/btn_progress_data"
        android:layout_width="96dp"
        android:layout_height="86dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/btn_progress_data"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>