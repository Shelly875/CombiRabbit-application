<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="250dp"
        app:cardCornerRadius="30dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:padding="10dp"
            android:background="@drawable/popup_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_tree"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/img_tree"
                app:layout_constraintEnd_toStartOf="@+id/num_record_broke_one"
                app:layout_constraintTop_toBottomOf="@+id/popup_question" />

            <ImageView
                android:id="@+id/img_birds"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="100dp"
                android:background="@drawable/img_birds"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/percentage_progress_one" />

            <TextView
                android:id="@+id/popup_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:textStyle="bold"
                android:padding="10dp"
                android:text="ההתקדמות שלי"
                android:textColor="@color/orange"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.454"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/close_pop_up"
                android:layout_width="39dp"
                android:layout_height="29dp"
                android:background="@drawable/btn_close_popup"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/title_game_one"
                android:layout_width="145dp"
                android:layout_height="20dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="68dp"
                android:text="בול פגיעה במספרים"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/popup_question" />

            <TextView
                android:id="@+id/title_game_two"
                android:layout_width="101dp"
                android:layout_height="18dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="20dp"
                android:text="התאם והשלם"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:layout_constraintEnd_toStartOf="@+id/title_game_one"
                app:layout_constraintTop_toBottomOf="@+id/popup_question" />

            <TextView
                android:id="@+id/title_record_broke"
                android:layout_width="74dp"
                android:layout_height="26dp"
                android:layout_marginTop="53dp"
                android:layout_marginEnd="-20dp"
                android:text="מספר הפעמים שהשיא נשבר"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/close_pop_up" />


            <TextView
                android:id="@+id/title_num_games"
                android:layout_width="78dp"
                android:layout_height="26dp"
                android:layout_marginTop="6dp"
                android:text="מספר המשחקים ששוחקו"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title_record_broke" />


            <TextView
                android:id="@+id/title_last_played_date"
                android:layout_width="93dp"
                android:layout_height="16dp"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="0dp"
                android:text="תאריך משחק אחרון"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title_num_games" />

            <TextView
                android:id="@+id/title_progress_percent"
                android:layout_width="83dp"
                android:layout_height="16dp"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="0dp"
                android:text="אחוז התקדמות"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title_last_played_date" />

            <TextView
                android:id="@+id/num_record_broke_one"
                android:layout_width="26dp"
                android:layout_height="23dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="56dp"
                android:text="0"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/orange"
                android:textSize="20sp"
                app:layout_constraintEnd_toStartOf="@+id/title_record_broke"
                app:layout_constraintTop_toBottomOf="@+id/title_game_one" />

            <TextView
                android:id="@+id/num_record_broke_two"
                android:layout_width="26dp"
                android:layout_height="23dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="108dp"
                android:text="0"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/orange"
                android:textSize="20sp"
                app:layout_constraintEnd_toStartOf="@+id/num_record_broke_one"
                app:layout_constraintTop_toBottomOf="@+id/title_game_two" />

            <TextView
                android:id="@+id/num_games_one"
                android:layout_width="26dp"
                android:layout_height="23dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="52dp"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@color/orange"
                android:textStyle="bold"
                android:textSize="20sp"
                app:layout_constraintEnd_toStartOf="@+id/title_num_games"
                app:layout_constraintTop_toBottomOf="@+id/num_record_broke_one" />

            <TextView
                android:id="@+id/num_games_two"
                android:layout_width="26dp"
                android:layout_height="23dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="108dp"
                android:text="0"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/orange"
                android:textSize="20dp"
                app:layout_constraintEnd_toStartOf="@+id/num_games_one"
                app:layout_constraintTop_toBottomOf="@+id/num_record_broke_two" />

            <TextView
                android:id="@+id/date_one"
                android:layout_width="100dp"
                android:layout_height="17dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="DD/MM/YYYY"
                android:textAlignment="center"
                android:textColor="@color/orange"
                android:textStyle="bold"
                android:textSize="14dp"
                app:layout_constraintEnd_toStartOf="@+id/title_last_played_date"
                app:layout_constraintTop_toBottomOf="@+id/num_games_one" />

            <TextView
                android:id="@+id/date_two"
                android:layout_width="100dp"
                android:layout_height="17dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="20dp"
                android:text="DD/MM/YYYY"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/orange"
                android:textSize="14dp"
                app:layout_constraintEnd_toStartOf="@+id/date_one"
                app:layout_constraintTop_toBottomOf="@+id/num_games_two" />

            <TextView
                android:id="@+id/percentage_progress_one"
                android:layout_width="51dp"
                android:layout_height="22dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="36dp"
                android:text="%"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/orange"
                android:textSize="15dp"
                app:layout_constraintEnd_toStartOf="@+id/title_progress_percent"
                app:layout_constraintTop_toBottomOf="@+id/date_one" />

            <TextView
                android:id="@+id/percentage_progress_two"
                android:layout_width="49dp"
                android:layout_height="21dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="80dp"
                android:text="%"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/orange"
                android:textSize="15dp"
                app:layout_constraintEnd_toStartOf="@+id/percentage_progress_one"
                app:layout_constraintTop_toBottomOf="@+id/date_two" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>